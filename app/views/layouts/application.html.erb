<!DOCTYPE html>
<html>
  <head>
    <title>OneTogether</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://use.fontawesome.com/releases/v6.1.0/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p id="header-icon"><i class="fa-solid fa-dog fa-3x"></i></p>
      <ul id="header-lists">
        <% if user_signed_in? %>
          <li><%= link_to current_user.nickname, '#' , class:'header-list' %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'header-list' %></li>
          <li><%= link_to 'スポット登録', '#' , class:'header-list'%></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path , class:'header-list'%></li>
          <li><%= link_to '新規登録', new_user_registration_path, class:'header-list' %></li>
        <% end %>
      </ul>  
    </header>
      <%= yield %>
    <footer>
      <p>©︎2022 XXXXXX</p>
    </footer>
  </body>
</html>
