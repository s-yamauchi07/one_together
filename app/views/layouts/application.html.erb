<!DOCTYPE html>
<html>
  <head>
    <title>OneTogether</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Murecho:wght@300&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <link href="https://use.fontawesome.com/releases/v6.1.0/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%="#{ENV['GOOGLE_MAPS_API']}"%>&libraries=places" async defer></script>
  </head>

  <body>
    <header>
      <a href="/spots" id="header-icon"><i class="fa-solid fa-dog fa-3x"></i></a>
      <ul id="header-lists">
        <% if user_signed_in? %>
          <li><%= link_to current_user.nickname, user_path(current_user) , class:'header-list' %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'header-list' %></li>
          <li><%= link_to 'スポット登録', new_spot_path , class:'header-list'%></li>
          <li><%= link_to 'こだわり検索', search_spots_path , class:'header-list'%></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path , class:'header-list'%></li>
          <li><%= link_to '新規登録', new_user_registration_path, class:'header-list' %></li>
        <% end %>
      </ul>  
    </header>
      <%= yield %>
    <footer>
      <p>©︎2022 XXXXXX</p>
    </footer>
  </body>
</html>
